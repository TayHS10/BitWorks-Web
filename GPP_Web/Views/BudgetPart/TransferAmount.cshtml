@model GPP_Web.DTOs.BudgetPart.TransferFundsDTO

@{
    ViewData["Title"] = "Transferir Fondos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/transferfunds.css">
<!-- Botón de retroceso con imagen pequeña -->
<div class="back-button">
    <a href="javascript:history.back()" class="btn btn-link" style="text-decoration: none; color: #3A889D;">
        <img src="~/images/icons/back.png" alt="Volver" class="back-icon"> Volver
    </a>
</div>
<h1 class="text-center">Transferir Fondos entre Partidas Presupuestarias</h1>

<!-- Mensaje de éxito -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Mensaje de error si ViewBag.SourceBudgetPart o ViewBag.AllBudgetParts son null -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Errores generales -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Errores:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Formulario de Transferencia -->
<form method="post" class="form-container">
    <div class="form-group">
        <label for="SourceBudgetPartId">Partida de Origen</label>
        @if (ViewBag.SourceBudgetPart != null)
        {
            <input type="text" class="form-control" id="SourceBudgetPartId" value="@ViewBag.SourceBudgetPart.PartName" readonly />
            <!-- Campo oculto para enviar el ID -->
            <input type="hidden" name="SourceBudgetPartId" value="@ViewBag.SourceBudgetPart.BudgetPartId" />
        }
        else
        {
            <span class="text-danger">No se pudo cargar la partida origen.</span>
        }
    </div>

    <div class="form-group">
        <label for="DestinationBudgetPartId">Partida de Destino</label>
        @if (ViewBag.AllBudgetParts != null)
        {
            <select class="form-control" id="DestinationBudgetPartId" name="DestinationBudgetPartId" required>
                <option value="">Seleccione una partida de destino</option>
                @foreach (var part in ViewBag.AllBudgetParts)
                {
                    <option value="@part.BudgetPartId">@part.PartName</option>
                }
            </select>
        }
        else
        {
            <span class="text-danger">No se pudieron cargar las partidas de destino.</span>
        }
    </div>

    <div class="form-group">
        <label for="Amount">Monto a Transferir</label>
        <input type="number" class="form-control" id="Amount" name="Amount" placeholder="Ingrese el monto a transferir" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Transferir Fondos</button>
    </div>
</form>
