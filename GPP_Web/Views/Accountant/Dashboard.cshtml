@model List<GPP_Web.DTOs.Project.ProjectResponseDTO>

@{
    ViewData["Title"] = "Dashboard del Contador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/accountant-dashboard.css">

<h1 class="text-center my-5">Dashboard del Contador: Proyectos Activos</h1>

<!-- Cards de acceso rápido -->
<div class="row">
    <!-- Card 1: Proyectos Activos -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Proyectos Activos</h5>
                <p class="card-text">Visualiza los proyectos activos en curso actualmente.</p>
                <a href="@Url.Action("Index", "Project")" class="btn btn-primary">Ver Proyectos</a>
            </div>
        </div>
    </div>

    <!-- Card 2: Resumen General -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Resumen General</h5>
                <p class="card-text">Consulta los detalles generales de los proyectos activos.</p>
                <a href="@Url.Action("Dashboard", "Accountant")" class="btn btn-primary">Ver Resumen</a>
            </div>
        </div>
    </div>

    <!-- Card 3: Informes Financieros -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informes Financieros</h5>
                <p class="card-text">Accede a los informes financieros de los proyectos activos.</p>
                <a href="@Url.Action("Index", "Expense")" class="btn btn-primary">Ver Informes</a>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de Proyectos Activos -->
<div class="table-responsive-container">
    <h4>Últimos Proyectos Activos</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Código del Proyecto</th>
                <th>Nombre del Proyecto</th>
                <th>Presupuesto</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectCode</td>
                    <td>@project.ProjectName</td>
                    <td>₡@project.Budget</td>
                    <td>@project.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
