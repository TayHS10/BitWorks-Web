@model GPP_Web.DTOs.User.ForgotPasswordRequestDTO

@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/rolerequest.css">

<div class="form-container">
    <div class="form-card">
        <!-- Título y Imagen -->
        <div class="header-section">
            <h3 class="title">Restablecer Contraseña</h3>
            <p class="text-muted">Introduce tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
            <img src="~/images/imgs/undraw_forgot-password_odai.png" alt="Restablecer Contraseña" class="img-fluid" />
        </div>

        <!-- Mostrar mensaje de éxito -->
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center mb-4" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }

        <!-- Mostrar mensaje de error -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center mb-4" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <!-- Formulario -->
        <form method="post">
            @Html.AntiForgeryToken()

            <div class="flex-column">
                <label asp-for="Email" class="form-label fs-6">Correo electrónico</label>
                <div class="inputForm">
                    <input asp-for="Email" class="input" autocomplete="email" placeholder="Introduce tu correo electrónico" />
                </div>
                <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
            </div>

            <button type="submit" class="button-submit">Restablecer Contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función para mostrar u ocultar la contraseña
        function togglePasswordVisibility() {
            var passwordInput = document.querySelector('input[type="password"]');
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
}
