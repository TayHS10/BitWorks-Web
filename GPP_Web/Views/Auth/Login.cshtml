@model GPP_Web.DTOs.User.LoginUserDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estilos personalizados para un look más moderno */
    body {
        background-color: #f0f2f5; /* Un gris claro para el fondo */
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 56px); /* Ajusta si tu navbar tiene una altura diferente */
        padding: 20px;
    }

    .card {
        border: none;
        border-radius: 1rem; /* Bordes más redondeados */
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1); /* Sombra más pronunciada */
        max-width: 450px; /* Limita el ancho de la tarjeta */
        width: 100%;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3); /* Degradado azul */
        color: white;
        border-bottom: none;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        padding: 1.5rem;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        transition: background-color 0.2s ease, border-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004a99;
        }

    .alert {
        border-radius: 0.5rem;
    }
</style>

<div class="login-container">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="mb-0">Bienvenido</h3>
            <p class="text-white-50 mb-0">Inicia sesión en tu cuenta</p>
        </div>
        <div class="card-body p-4 p-md-5">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center fs-6"></div>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger text-center mb-4" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fs-6"></label>
                    <input asp-for="Email" class="form-control" autocomplete="username" placeholder="Tu correo electrónico" />
                    <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password" class="form-label fs-6"></label>
                    <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" placeholder="Tu contraseña" />
                    <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span>
                </div>
                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                <div class="text-center">
                    <a href="#" class="text-decoration-none text-muted small">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}