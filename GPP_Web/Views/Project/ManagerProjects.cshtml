@model IEnumerable<GPP_Web.DTOs.Project.ProjectResponseDTO>

@{
    ViewData["Title"] = "Mis Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/managerprojects.css">

<!-- Título de la página -->
<h1 class="text-center dashboard-title">Mis Proyectos Asignados</h1>

<!-- Lista de Proyectos -->
<div class="project-list">
    @foreach (var project in Model)
    {
        <div class="project-card">
            <div class="card-header">
                <h2>@project.ProjectName</h2>
                <p class="card-code">Código: @project.ProjectCode</p>
            </div>
            <div class="card-body">
                <p><strong>Presupuesto Asignado:</strong> ₡@project.Budget</p>
                <p><strong>Presupuesto Restante:</strong> ₡@project.RemainingBudget</p>
                <p><strong>Estado:</strong> @project.Status</p>
                <p><strong>Correo del Encargado:</strong> @project.ManagerEmail</p>
                <p><strong>Fecha de Creación:</strong> @project.CreatedAt?.ToString("dd MMM yyyy")</p>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("GeneralView", "Project", new { projectId = project.ProjectId })" class="btn btn-primary">Ver Detalles</a>
            </div>
        </div>
    }
</div>
