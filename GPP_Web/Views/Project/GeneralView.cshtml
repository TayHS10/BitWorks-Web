@model GPP_Web.DTOs.Project.ProjectResponseDTO

@{
    ViewData["Title"] = "Vista General del Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Colores y fuentes base (asegúrate de que estén definidos globalmente en site.css o _Layout.cshtml,
           o que estas definiciones aquí no entren en conflicto con otras globales) */
    :root {
        --light-gray-bg: #eff1f3;
        --primary-color: #3A889D; /* Dark Slate Gray */
        --secondary-color: #275849; /* Charcoal Blue (para contrastes) */
        --dark-text-color: #343a40; /* Texto oscuro general */
        --border-color: #e9ecef; /* Color de borde suave */
        --success-color: #28a745; /* Bootstrap green for active/success */
        --warning-color: #ffc107; /* Bootstrap yellow for warning/in progress */
        --danger-color: #dc3545; /* Bootstrap red for danger */
        --info-color: #17a2b8; /* Bootstrap info (for 'Completed' status) */
    }

    body {
        background-color: var(--light-gray-bg) !important;
        font-family: 'Plus Jakarta Sans', sans-serif;
        color: var(--dark-text-color);
    }

    /* --- General View Specific Styles --- */

    /* Contenedor principal para mantener la consistencia con el dashboard */
    .dashboard-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
        max-width: 900px; /* Un poco más estrecho que el dashboard para enfocar el contenido */
        margin-left: auto;
        margin-right: auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    /* Título principal del Dashboard */
    .dashboard-main-title {
        font-size: 3.5rem;
        font-weight: 800;
        color: var(--dark-text-color);
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 1rem;
        position: relative;
        padding-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .dashboard-main-title i {
            font-size: 3rem;
            margin-right: 15px;
            color: var(--dark-text-color);
        }

        .dashboard-main-title::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: 0;
            transform: translateX(-50%);
            width: 100px;
            height: 6px;
            background-color: var(--secondary-color);
            border-radius: 3px;
        }

    /* Subtítulo de bienvenida */
    .dashboard-subtitle {
        font-size: 1.75rem;
        color: var(--dark-text-color);
        margin-bottom: 4rem;
        font-weight: 600;
    }

    /* --- Estilos de la Tarjeta de Detalles del Proyecto --- */
    .project-details-section {
        margin-bottom: 3rem;
    }

    .project-card-view {
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden; /* Asegura que el border-radius se aplique a los hijos */
    }

        .project-card-view .card-header-view {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .project-card-view .card-title-view {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
        }

        /* Estilo para los badges de estado */
        .project-card-view .badge {
            font-size: 1rem;
            padding: 0.5em 0.8em;
            border-radius: 0.5rem;
            font-weight: 600;
        }
        /* Clases de Bootstrap 5 para badges */
        .project-card-view .bg-success {
            background-color: var(--success-color) !important;
            color: white;
        }

        .project-card-view .bg-warning {
            background-color: var(--warning-color) !important;
            color: var(--dark-text-color) !important;
        }

        .project-card-view .bg-danger {
            background-color: var(--danger-color) !important;
            color: white;
        }

        .project-card-view .bg-info {
            background-color: var(--info-color) !important;
            color: white;
        }

        .project-card-view .bg-secondary {
            background-color: #6c757d !important;
            color: white;
        }


        .project-card-view .card-body-view {
            padding: 2rem;
        }

        .project-card-view .detail-item {
            font-size: 1.1rem;
            margin-bottom: 1rem; /* Espacio entre líneas de detalle */
            color: var(--dark-text-color);
            display: flex; /* Para alinear ícono y texto */
            align-items: flex-start; /* Alinea el ícono y el texto en la parte superior */
        }

            .project-card-view .detail-item strong {
                font-weight: 700;
                margin-right: 0.5rem;
                color: var(--primary-color); /* Para enfatizar las etiquetas */
            }

            .project-card-view .detail-item i {
                font-size: 1.3rem;
                margin-right: 0.8rem;
                color: var(--secondary-color); /* Color del ícono */
                flex-shrink: 0; /* Evita que el ícono se encoja */
                width: 25px; /* Ancho consistente para los íconos */
                text-align: center;
            }

        .project-card-view .card-footer-view {
            background-color: var(--light-gray-bg); /* Un fondo claro para el pie de la tarjeta */
            padding: 1.5rem 2rem;
            border-top: 1px solid var(--border-color);
            text-align: right; /* Alinea el botón a la derecha */
        }

    /* Estilo para el botón primario personalizado (ej. Volver al Dashboard) */
    .btn-primary-custom {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        font-size: 1.1rem;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        display: inline-flex; /* Para alinear ícono y texto */
        align-items: center;
        justify-content: center;
    }

        .btn-primary-custom:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            color: white;
        }

        .btn-primary-custom i {
            margin-right: 0.8rem;
            font-size: 1.2rem;
        }

    /* Estilo para un botón secundario personalizado (ej. Ver Partidas) */
    .btn-secondary-custom {
        background-color: #6c757d; /* Gris de Bootstrap */
        border-color: #6c757d;
        color: white;
        font-size: 1.1rem;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-secondary-custom:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            color: white;
        }

        .btn-secondary-custom i {
            margin-right: 0.8rem;
            font-size: 1.2rem;
        }
</style>

<div class="container-fluid dashboard-container">
    <h1 class="text-center dashboard-main-title mb-3 animate__animated animate__bounceIn">
        <i class="bi bi-folder-fill"></i> Vista General del Proyecto
    </h1>
    <p class="text-center dashboard-subtitle animate__animated animate__fadeInUp">Detalles del Proyecto: @Model.ProjectCode</p>

    <section class="project-details-section mb-5 animate__animated animate__fadeInUp">
        <div class="project-card-view">
            <div class="card-header-view">
                <h3 class="card-title-view">@Model.ProjectName</h3>
                @{
                    string statusBadgeClass = "";
                    switch (Model.Status)
                    {
                        case "Active":
                            statusBadgeClass = "bg-success";
                            break;
                        case "Completed":
                            statusBadgeClass = "bg-info";
                            break;
                        case "On Hold":
                            statusBadgeClass = "bg-warning text-dark";
                            break;
                        case "Cancelled":
                            statusBadgeClass = "bg-danger";
                            break;
                        default:
                            statusBadgeClass = "bg-secondary";
                            break;
                    }
                }
                <span class="badge @statusBadgeClass">@Model.Status</span>
            </div>
            <div class="card-body-view">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="detail-item"><i class="bi bi-tag-fill me-2"></i><strong>Código:</strong> @Model.ProjectCode</p>
                    </div>
                    <div class="col-md-6">
                        <p class="detail-item"><i class="bi bi-person-fill me-2"></i><strong>Encargado:</strong> @(Model.Manager?.FullName ?? Model.ManagerEmail)</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <p class="detail-item"><i class="bi bi-journal-text me-2"></i><strong>Descripción:</strong> @Model.Description</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="detail-item"><i class="bi bi-cash-coin me-2"></i><strong>Presupuesto Asignado:</strong> ₡@Model.Budget.ToString("N0")</p>
                    </div>
                    <div class="col-md-6">
                        <p class="detail-item"><i class="bi bi-wallet-fill me-2"></i><strong>Presupuesto Restante:</strong> ₡@Model.RemainingBudget.ToString("N0")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p class="detail-item"><i class="bi bi-calendar-plus-fill me-2"></i><strong>Fecha de Creación:</strong> @Model.CreatedAt?.ToString("dd MMMM,YYYY")</p>
                    </div>
                    @* Se eliminó la columna de Alertas según tu solicitud *@
                    <div class="col-md-6">
                    </div>
                </div>
            </div>
            <div class="card-footer-view text-center">
                <a href="@Url.Action("Dashboard", "Manager")" class="btn btn-primary-custom"><i class="bi bi-arrow-left me-2"></i> Volver al Dashboard</a>
                <a href="@Url.Action("Index", "BudgetPart", new { projectId = Model.ProjectId })" class="btn btn-secondary-custom ms-3"><i class="bi bi-cash-stack me-2"></i> Ver Partidas</a>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}