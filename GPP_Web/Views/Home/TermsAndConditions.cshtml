@{
    ViewData["Title"] = "Términos y Condiciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Enlaces a librerías externas de CSS (asegúrate de que estén en _Layout o aquí) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Estilos generales y variables - Consistentes con otras vistas */
    :root {
        --primary-color: #3A889D; /* Azul oscuro */
        --secondary-color: #275849; /* Verde oscuro/azulado para contrastes */
        /* Fondo completamente blanco */
        --light-gray-bg: #FFFFFF;
        --dark-text-color: #343a40; /* Color de texto oscuro general */
        --border-color: #e9ecef; /* Color de borde suave */
        --card-bg: #ffffff; /* Fondo blanco para tarjetas y formularios */
        --heading-color: #2c3e50; /* Un color oscuro para los encabezados */
        --text-paragraph-color: #555; /* Color para los párrafos de texto */
        --link-color: #007bff; /* Color estándar para enlaces */
    }

    body {
        background-color: var(--light-gray-bg) !important; /* Fondo blanco total */
        font-family: 'Plus Jakarta Sans', sans-serif;
        color: var(--dark-text-color);
        padding: 20px;
    }

    .container-main {
        padding: 20px;
        max-width: 960px; /* Ancho cómodo para texto largo */
        margin: 0 auto;
    }

    .view-title {
        color: var(--primary-color);
        font-weight: 700;
        font-size: 2.8rem;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-bottom: 40px;
    }

    .content-section {
        background-color: var(--card-bg);
        border-radius: 1rem;
        /* Sombra más sutil */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        margin-bottom: 30px;
    }

        .content-section h2 {
            color: var(--heading-color);
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .content-section h3 {
            color: var(--primary-color);
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .content-section p {
            font-size: 1rem;
            line-height: 1.7;
            color: var(--text-paragraph-color);
            margin-bottom: 1rem;
        }

        .content-section ul {
            list-style: none;
            padding-left: 0;
        }

            .content-section ul li {
                margin-bottom: 0.8rem;
                position: relative;
                padding-left: 25px;
                color: var(--text-paragraph-color);
            }

                .content-section ul li::before {
                    content: "\f26a"; /* Icono de círculo relleno de Bootstrap Icons */
                    font-family: "bootstrap-icons" !important;
                    font-size: 0.8rem;
                    color: var(--primary-color);
                    position: absolute;
                    left: 0;
                    top: 5px;
                }

    .info-box {
        background-color: #e6f3f8; /* Un azul muy claro */
        border-left: 5px solid var(--primary-color);
        border-radius: 0.5rem;
        /* Sombra sutil para la caja de información */
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.07);
        padding: 1.5rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        color: #333;
        font-style: italic;
    }

    .contact-info {
        text-align: center;
        margin-top: 3rem;
        border-top: 1px solid var(--border-color);
        padding-top: 2rem;
    }

        .contact-info p {
            margin-bottom: 0.5rem;
        }

        .contact-info a {
            color: var(--link-color);
            text-decoration: none;
            font-weight: 600;
        }

            .contact-info a:hover {
                text-decoration: underline;
            }

    .hero-image {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        margin-bottom: 30px;
        /* Sombra más sutil para la imagen principal */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }
</style>

<div class="container-main animate__animated animate__fadeIn">

